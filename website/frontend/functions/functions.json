{
    "name": "functions",
    "type": "module",
    "engines": { "node": "20" },
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "deploy": "npm run build && firebase deploy --only functions",
        "serve": "firebase emulators:start"
    },
    "dependencies": {
        "express": "^4.19.2",
        "firebase-functions": "^5.1.1"
    },
    "devDependencies": {
        "typescript": "^5.6.3"
    },
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true
    },
    "include": ["src/**/*.ts"]
}